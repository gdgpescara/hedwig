---
import { HeadHrefLangs } from "astro-i18next/components";
import i18next, { t } from "i18next";
import Drawer from "~/components/shared/Drawer.astro";
import Footer from "~/components/home/Footer.astro";
import "./global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html data-theme="dark" lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Devfest Pescara 2023 and the developers' magic"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/images/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <HeadHrefLangs />
  </head>
  <body>
    <div class="text-center">
      <a class="sr-only focus:not-sr-only" href="#content"
        >{t("skip-to-content-link")}</a
      >
    </div>
    <Drawer>
      <slot />
    </Drawer>
    <Footer />
    <script>
      if ("service-worker" in navigator) {
        navigator.serviceWorker
          .register("/service-worker.js")
          .then(function (registration) {
            console.log(
              "ServiceWorker registration successful with scope: ",
              registration.scope,
            );
          })
          .catch(function (err) {
            console.log("ServiceWorker registration failed: ", err);
          });
      }
    </script>
  </body>
</html>
