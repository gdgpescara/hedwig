---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="text-center px-2 pb-5">
  <div class="text-center max-w-full">
    <slot />
  </div>
  <h3 class="text-2xl xl:text-3xl">
    {title}
  </h3>
  <div class="text-5xl xl:text-6xl font-bold text-accent-content">
    {description}
  </div>
</div>
