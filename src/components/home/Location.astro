---
import { t } from "i18next";
import Map from "./Map.astro";
import Section from "../shared/Section.astro";
import SectionTitle from "../shared/SectionTitle.astro";

const mapUrl =
  "https://www.google.com/maps/dir//Universit%C3%A0+degli+studi+%22G.d'Annunzio%22+sede+Pescara,+Viale+Pindaro,+42,+65127+Pescara+PE/@42.4520472,14.1424379,12z/data=!4m8!4m7!1m0!1m5!1m1!1s0x1331a74d5acdfbdf:0x4389fccd7763c874!2m2!1d14.2248392!2d42.45195?entry=ttu";
---

<Section
  id="location"
  className="min-h-screen grid grid-cols-1 xl:grid-cols-2 justify-center items-center"
>
  <Map
    markerIcon="images/marker.png"
    markerTitle="Marker"
    lat={42.45195}
    lng={14.2248392}
  />
  <div class="px-16 py-8 order-1 md:order-2 text-center">
    <SectionTitle level="h2">{t("landing:location.title")}</SectionTitle>
    <div class="text-2xl xl:text-3xl font-bold text-accent-content pt-4">
      {t("landing:location.place")}
    </div>
    <div class="text-base xl:text-xl py-4">
      {t("landing:location.address")}
    </div>
    <a
      class="btn btn-outline btn-secondary btn-wide btn-circle mt-3"
      target="_blank"
      role="link"
      href={mapUrl}>{t("landing:location.direction")}</a
    >
  </div>
</Section>
